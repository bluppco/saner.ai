---

<section class="py-16">
    <ContainerSmall>
        <div class="flex flex-col gap-8">
            <div class="flex flex-col gap-2">
                <HeadingTwoFiveXlSemibold>{ data.title }</HeadingTwoFiveXlSemibold>
                <HeadingTwoFiveXl>{ data.subtitle }</HeadingTwoFiveXl>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6 border border-gray-200">
                {

                    card_data.map( ( data ) => (

                        <div class="flex flex-col gap-6">
                            {

                                data.map( ( card ) => (

                                    <TestimonialCard
                                        description={ card.description }
                                        name={ card.name }
                                        source={ card.source }
                                        title={ card.title }
                                    />

                                ))

                            }
                        </div>

                    ))

                }
            </div>
        </div>
    </ContainerSmall>
</section>
